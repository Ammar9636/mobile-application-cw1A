<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.labexam3">
    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonalWellnessApp"
        tools:targetApi="31">

        <!-- Splash Screen Activity (MAIN LAUNCHER) -->
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PersonalWellnessApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Onboarding Activities -->
        <activity
            android:name=".OnboardScreen1Activity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PersonalWellnessApp" />
        <activity
            android:name=".OnboardScreen2Activity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PersonalWellnessApp" />
        <activity
            android:name=".OnboardScreen3Activity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PersonalWellnessApp" /> <!-- Authentication Activities -->
        <activity
            android:name=".LoginRegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PersonalWellnessApp" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PersonalWellnessApp"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PersonalWellnessApp"
            android:windowSoftInputMode="adjustPan" /> <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" /> <!-- Widget Configuration Activity -->
        <activity
            android:name=".HabitWidgetConfigureActivity"
            android:exported="false"
            android:theme="@style/Theme.PersonalWellnessApp">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity> <!-- App Widget Provider -->
        <receiver
            android:name=".HabitWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.labexam3.WIDGET_UPDATE" />
                <action android:name="com.example.labexam3.WIDGET_CLICK" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/habit_widget_info" />
        </receiver>

        <!--  FIXED: Reminder Receiver -->
        <receiver
            android:name=".ReminderReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.REBOOT" />
                <action android:name="com.example.labexam3.HYDRATION_REMINDER" />
            </intent-filter>
        </receiver>

        <!--  FIXED: Hydration Action Receiver -->
        <receiver
            android:name=".HydrationActionReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.labexam3.ACTION_MARK_DONE" />
                <action android:name="com.example.labexam3.ACTION_SNOOZE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>