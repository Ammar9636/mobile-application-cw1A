<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_mood"
            android:tint="@color/wellness_primary"
            android:layout_marginEnd="12dp"
            tools:ignore="UseAppTint" />

        <TextView
            style="@style/WellnessTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you feeling?" />

    </LinearLayout>

    <!-- Selected Mood Display -->
    <TextView
        android:id="@+id/textViewSelectedMood"
        style="@style/WellnessTextSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selected_mood"
        android:gravity="center"
        android:padding="12dp"
        android:textColor="@color/wellness_primary"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="ðŸ˜Š Happy"
        tools:visibility="visible" />

    <!-- Emoji Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEmojis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:nestedScrollingEnabled="false"
        tools:listitem="@layout/item_emoji_mood" />

    <!-- Note Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutNote"
        style="@style/WellnessTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:hint="Add a note (optional)"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCancel"
            style="@style/WellnessButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="Cancel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSave"
            style="@style/WellnessButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Save Mood" />

    </LinearLayout>

</LinearLayout>