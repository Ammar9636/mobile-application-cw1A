<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_habit"
            app:tint="@color/wellness_primary"
            android:layout_marginEnd="12dp" />

        <TextView
            style="@style/WellnessTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Habit"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- Habit Title Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutTitle"
        style="@style/WellnessTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Habit title"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:maxLength="50"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Habit Description Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutDescription"
        style="@style/WellnessTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Description (optional)"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_description">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="100"
            android:maxLines="3"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Helper Text -->
    <TextView
        style="@style/WellnessTextCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ Tip: Be specific about your habit goal (e.g., 'Drink 8 glasses of water' instead of 'Drink water')"
        android:textColor="@color/text_hint"
        android:background="@drawable/bg_tip_container"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:drawableStart="@drawable/ic_lightbulb"
        android:drawablePadding="8dp"
        android:gravity="center_vertical" />

</LinearLayout>