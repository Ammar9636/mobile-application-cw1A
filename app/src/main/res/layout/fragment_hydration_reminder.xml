<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/WellnessCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hydration Reminders"
                        style="@style/WellnessTextTitle" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_water_drop"
                        app:tint="@color/wellness_primary" />

                </LinearLayout>

                <TextView
                    style="@style/WellnessTextBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stay healthy with personalized hydration reminders"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp" />

                <!-- Master Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_toggle_container"
                    android:padding="12dp">

                    <TextView
                        style="@style/WellnessTextBody"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Enable reminders"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <Switch
                        android:id="@+id/switchHydrationReminder"
                        style="@style/WellnessSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Status Text -->
                <TextView
                    android:id="@+id/textViewReminderStatus"
                    style="@style/WellnessTextCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textStyle="italic"
                    tools:text="Hydration reminders are active" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Interval Settings Section -->
        <LinearLayout
            android:id="@+id/layoutIntervalSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                style="@style/WellnessCard.Flat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_schedule"
                            app:tint="@color/wellness_primary"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            style="@style/WellnessTextSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reminder Interval"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- Current Interval Display -->
                    <TextView
                        android:id="@+id/textViewCurrentInterval"
                        style="@style/WellnessTextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/bg_interval_display"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:padding="16dp"
                        android:textColor="@color/wellness_primary"
                        android:textSize="18sp"
                        tools:text="Every 2 hours" />

                    <!-- Preset Interval Buttons -->
                    <TextView
                        style="@style/WellnessTextCaption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Quick Select:"
                        android:textColor="@color/text_secondary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonPreset15min"
                            style="@style/WellnessButton.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:text="15m"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonPreset1hour"
                            style="@style/WellnessButton.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1"
                            android:text="1h"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonPreset2hours"
                            style="@style/WellnessButton.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1"
                            android:text="2h"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonPreset3hours"
                            style="@style/WellnessButton.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:text="3h"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Advanced Interval Options -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonCustomInterval"
                            style="@style/WellnessButton.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_edit"
                            android:text="Custom"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonTimePicker"
                            style="@style/WellnessButton.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_time"
                            android:text="Picker"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonSelectFromList"
                            style="@style/WellnessButton.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_list"
                            android:text="List"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Snooze Settings Section -->
            <com.google.android.material.card.MaterialCardView
                style="@style/WellnessCard.Flat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_snooze"
                            app:tint="@color/wellness_primary"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            style="@style/WellnessTextSubtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Snooze Options"
                            android:textColor="@color/text_primary" />

                        <Switch
                            android:id="@+id/switchEnableSnooze"
                            style="@style/WellnessSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- Snooze Options Layout -->
                    <LinearLayout
                        android:id="@+id/layoutSnoozeOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Snooze Duration Selection -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/WellnessTextBody"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Snooze Duration"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:id="@+id/textViewSnoozeDuration"
                                    style="@style/WellnessTextCaption"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_secondary"
                                    tools:text="30 minutes" />

                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonSnoozeDuration"
                                style="@style/WellnessButton.Outlined"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Change"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!-- Snooze Now Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonSnoozeNow"
                            style="@style/WellnessButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/accent_warning"
                            android:drawableStart="@drawable/ic_snooze"
                            android:drawablePadding="8dp"
                            android:text="Snooze Reminders Now" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Notification Customization Section -->
            <LinearLayout
                android:id="@+id/layoutNotificationCustomization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    style="@style/WellnessCard.Flat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_notification_settings"
                                app:tint="@color/wellness_primary"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                style="@style/WellnessTextSubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Notification Settings"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <!-- Sound Selection -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/WellnessTextBody"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Notification Sound"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:id="@+id/textViewCurrentSound"
                                    style="@style/WellnessTextCaption"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_secondary"
                                    tools:text="Default" />

                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonSelectSound"
                                style="@style/WellnessButton.Outlined"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Change"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!-- Vibration Toggle -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                style="@style/WellnessTextBody"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Vibration"
                                android:textColor="@color/text_primary" />

                            <Switch
                                android:id="@+id/switchVibration"
                                style="@style/WellnessSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <!-- Priority Selection -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/WellnessTextBody"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Priority Level"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:id="@+id/textViewCurrentPriority"
                                    style="@style/WellnessTextCaption"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_secondary"
                                    tools:text="Default" />

                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonPriority"
                                style="@style/WellnessButton.Outlined"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Change"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!-- LED Color Selection -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/WellnessTextBody"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LED Color"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:id="@+id/textViewCurrentLedColor"
                                    style="@style/WellnessTextCaption"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_secondary"
                                    tools:text="Default" />

                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonLedColor"
                                style="@style/WellnessButton.Outlined"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Change"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Testing Options Section -->
            <LinearLayout
                android:id="@+id/layoutTestingOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    style="@style/WellnessCard.Flat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_test_tube"
                                app:tint="@color/wellness_primary"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                style="@style/WellnessTextSubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Test and Preview"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <!-- Test Buttons Grid -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- First Row -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonTestNotification"
                                    style="@style/WellnessButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="4dp"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/ic_notification_test"
                                    android:text="Test"
                                    android:textSize="12sp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonPreviewNotification"
                                    style="@style/WellnessButton.Outlined"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/ic_preview"
                                    android:text="Preview"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <!-- Second Row -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonTestSound"
                                    style="@style/WellnessButton.Outlined"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="4dp"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/ic_volume"
                                    android:text="Sound"
                                    android:textSize="12sp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonTestVibration"
                                    style="@style/WellnessButton.Outlined"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/ic_vibration"
                                    android:text="Vibrate"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Schedule Display Section -->
        <com.google.android.material.card.MaterialCardView
            style="@style/WellnessCard.Flat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_schedule_display"
                        app:tint="@color/wellness_primary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        style="@style/WellnessTextSubtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Schedule Status"
                        android:textColor="@color/text_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonRefreshSchedule"
                        style="@style/WellnessButton.Outlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_refresh"
                        android:text="Refresh"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Schedule Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_schedule_container"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/WellnessTextCaption"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Status:"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/textViewScheduleStatus"
                            style="@style/WellnessTextCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            tools:text="Active - Every 2 hours" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/WellnessTextCaption"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Next reminder:"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/textViewNextReminder"
                            style="@style/WellnessTextCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/wellness_primary"
                            tools:text="In 1 hour 23 minutes" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/WellnessTextCaption"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Background reminders:"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/textViewActiveReminders"
                            style="@style/WellnessTextCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            tools:text="Active reminders: Yes" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/WellnessTextCaption"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Last updated:"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/textViewLastUpdated"
                            style="@style/WellnessTextCaption"
