<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_login"
    tools:context=".LoginRegisterActivity">

    <!-- Top Section with Logo -->
    <LinearLayout
        android:id="@+id/linearLayoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_logo_circle"
            android:contentDescription="Personal Wellness Logo"
            android:elevation="8dp"
            android:padding="16dp"
            android:src="@drawable/logo" />

        <!-- App Name -->
        <TextView
            android:id="@+id/textViewAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-bold"
            android:letterSpacing="0.02"
            android:text="@string/personal_wellnessss"
            android:textColor="@color/text_white"
            android:textSize="26sp" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/textViewTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:fontFamily="sans-serif-light"
            android:text="Your Journey to Better Health"
            android:textColor="@color/text_white"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Welcome Section -->
    <LinearLayout
        android:id="@+id/linearLayoutWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutHeader">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/textViewWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="Welcome to your personal Healthmate companion. Start your journey to better health today!"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:alpha="0.95" />

    </LinearLayout>

    <!-- Bottom Section with Buttons -->
    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLogin"
            style="@style/WellnessButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/surface_white"
            android:drawableStart="@drawable/ic_login"
            android:drawablePadding="12dp"
            android:text="Sign In"
            android:textColor="@color/wellness_primary"
            android:textSize="16sp" />

        <!-- Register Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRegister"
            style="@style/WellnessButton.Outlined"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:drawableStart="@drawable/ic_person_add"
            android:drawablePadding="12dp"
            android:strokeColor="@color/text_white"
            android:text="Create Account"
            android:textColor="@color/text_white"
            android:textSize="16sp" />

        <!-- Guest Login Option -->
        <TextView
            android:id="@+id/textViewGuestLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:padding="12dp"
            android:text="Continue as Guest"
            android:textColor="@color/text_white"
            android:textSize="14sp"
            android:alpha="0.8"
            android:drawableStart="@drawable/ic_guest"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>