<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_widget_config"
                app:tint="@color/wellness_primary"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewTitle"
                    style="@style/WellnessTextTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Configure Habit Widget" />

                <TextView
                    android:id="@+id/textViewDescription"
                    style="@style/WellnessTextCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    tools:text="This widget will show your daily habit completion progress on your home screen." />

            </LinearLayout>

        </LinearLayout>

        <!-- Widget Preview Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/WellnessCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textViewPreviewTitle"
                    style="@style/WellnessTextSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/text_primary"
                    tools:text="Widget Preview" />

                <!-- Widget Preview Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_widget_preview"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Preview Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_habit_widget"
                            app:tint="@color/widget_accent"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Daily Habits"
                            android:textColor="@color/widget_text"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/textViewPreviewEmoji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            tools:text="ðŸŒŸ" />

                    </LinearLayout>

                    <!-- Preview Progress -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/textViewPreviewProgress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/widget_text"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            tools:text="Habits: 3/5" />

                        <TextView
                            android:id="@+id/textViewPreviewPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/widget_accent"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            tools:text="60%" />

                    </LinearLayout>

                    <!-- Preview Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progressBarPreview"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginBottom="6dp"
                        android:max="100"
                        android:progressDrawable="@drawable/widget_progress_bar"
                        tools:progress="60" />

                    <!-- Preview Motivation -->
                    <TextView
                        android:id="@+id/textViewPreviewMotivation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp"
                        android:textStyle="italic"
                        tools:text="Keep going!" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewPreviewInfo"
                    style="@style/WellnessTextCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/text_hint"
                    tools:text="Complete more habits to reach 100%!" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonUpdatePreview"
                    style="@style/WellnessButton.Outlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:drawableStart="@drawable/ic_refresh"
                    android:drawablePadding="8dp"
                    android:text="Update Preview" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Configuration Options -->
        <com.google.android.material.card.MaterialCardView
            style="@style/WellnessCard.Flat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/WellnessTextSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Widget Features"
                    android:textColor="@color/text_primary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/WellnessTextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_check_small"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:text="Real-time habit completion tracking"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        style="@style/WellnessTextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_check_small"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:text="Visual progress bar and percentage"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        style="@style/WellnessTextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_check_small"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:text="Motivational messages and emojis"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        style="@style/WellnessTextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_check_small"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:text="Tap to open the app"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCancel"
                style="@style/WellnessButton.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="Cancel" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAddWidget"
                style="@style/WellnessButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_add_widget"
                android:drawablePadding="8dp"
                android:text="Add Widget" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>