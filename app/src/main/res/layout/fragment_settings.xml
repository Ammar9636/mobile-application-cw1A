<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/WellnessCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Settings"
                        style="@style/WellnessTextTitle" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_settings"
                        app:tint="@color/wellness_primary" />

                </LinearLayout>

                <TextView
                    style="@style/WellnessTextBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customize your wellness experience and manage your data"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Data Management Section -->
        <com.google.android.material.card.MaterialCardView
            style="@style/WellnessCard.Flat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_data"
                        app:tint="@color/wellness_primary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        style="@style/WellnessTextSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Management"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Data action buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonClearHabits"
                        style="@style/WellnessButton.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:drawableStart="@drawable/ic_habits"
                        android:drawablePadding="8dp"
                        android:text="Clear All Habits"
                        android:textColor="@color/accent_warning" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonClearMoods"
                        style="@style/WellnessButton.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:drawableStart="@drawable/ic_mood"
                        android:drawablePadding="8dp"
                        android:text="Clear All Mood Entries"
                        android:textColor="@color/accent_warning" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonExportData"
                        style="@style/WellnessButton.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:drawableStart="@drawable/ic_export"
                        android:drawablePadding="8dp"
                        android:text="Export Data"
                        android:textColor="@color/wellness_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonResetSettings"
                        style="@style/WellnessButton.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:drawableStart="@drawable/ic_reset"
                        android:drawablePadding="8dp"
                        android:text="Reset Settings"
                        android:textColor="@color/accent_warning" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="@color/border_light" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonClearAllData"
                        style="@style/WellnessButton.Error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_delete_all"
                        android:drawablePadding="8dp"
                        android:text="Clear All Data" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Notification Preferences Section -->
        <com.google.android.material.card.MaterialCardView
            style="@style/WellnessCard.Flat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        app:tint="@color/wellness_primary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        style="@style/WellnessTextSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification Preferences"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Master notification toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        style="@style/WellnessTextBody"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Enable all notifications"
                        android:textColor="@color/text_primary" />

                    <Switch
                        android:id="@+id/switchNotifications"
                        style="@style/WellnessSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Vibration toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        style="@style/WellnessTextBody"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vibration"
                        android:textColor="@color/text_primary" />

                    <Switch
                        android:id="@+id/switchVibration"
                        style="@style/WellnessSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Sound toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/WellnessTextBody"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sound"
                        android:textColor="@color/text_primary" />

                    <Switch
                        android:id="@+id/switchSound"
                        style="@style/WellnessSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Theme & Appearance Section -->
        <com.google.android.material.card.MaterialCardView
            style="@style/WellnessCard.Flat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_palette"
                        app:tint="@color/wellness_primary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        style="@style/WellnessTextSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theme and  Appearance"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Theme selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/WellnessTextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Theme"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/textViewCurrentTheme"
                            style="@style/WellnessTextCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_secondary"
                            tools:text="Auto (System Default)" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonSelectTheme"
                        style="@style/WellnessButton.Outlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Font size selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/WellnessTextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Font Size"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/textViewCurrentFontSize"
                            style="@style/WellnessTextCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_secondary"
                            tools:text="Medium" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonFontSize"
                        style="@style/WellnessButton.Outlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Statistics Section -->
        <com.google.android.material.card.MaterialCardView
            style="@style/WellnessCard.Flat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_analytics"
                        app:tint="@color/wellness_primary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        style="@style/WellnessTextSubtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Your Statistics"
                        android:textColor="@color/text_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonRefreshStats"
                        style="@style/WellnessButton.Outlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_refresh"
                        android:text="Refresh"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Stats Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_stats_container"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textViewHabitCount"
                        style="@style/WellnessTextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        tools:text="Active Habits: 5" />

                    <TextView
                        android:id="@+id/textViewTodayProgress"
                        style="@style/WellnessTextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        tools:text="Today's Progress: 3/5 completed" />

                    <TextView
                        android:id="@+id/textViewMoodEntries"
                        style="@style/WellnessTextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        tools:text="Total Mood Entries: 12" />

                    <TextView
                        android:id="@+id/textViewStreakInfo"
                        style="@style/WellnessTextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        tools:text="Best Streak: 7 days | Avg: 3.2 days" />

                    <TextView
                        android:id="@+id/textViewDataSize"
                        style="@style/WellnessTextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Total Data Points: 17" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- App Information Section -->
        <com.google.android.material.card.MaterialCardView
            style="@style/WellnessCard.Flat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/wellness_primary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        style="@style/WellnessTextSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About App"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewAppVersion"
                    style="@style/WellnessTextBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    tools:text="Version 1.0.0" />

                <TextView
                    android:id="@+id/textViewAppDescription"
                    style="@style/WellnessTextCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="16dp"
                    tools:text="Personal Wellness App helps you track your daily habits, log your moods, and stay hydrated with customizable reminders." />

                <!-- App info buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonAbout"
                        style="@style/WellnessButton.Outlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="About"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonPrivacyPolicy"
                        style="@style/WellnessButton.Outlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Privacy"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Logout Section -->
        <com.google.android.material.card.MaterialCardView
            style="@style/WellnessCard.Flat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/WellnessTextCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign out of your account. You'll need to log in again to access your data."
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonLogout"
                    style="@style/WellnessButton.Outlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_logout"
                    android:drawablePadding="8dp"
                    android:text="Logout"
                    android:textColor="@color/accent_error"
                    android:strokeColor="@color/accent_error" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Success/Error Messages -->
        <TextView
            android:id="@+id/textViewMessage"
            style="@style/WellnessTextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_success_message"
            android:drawableStart="@drawable/ic_check_circle"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:textColor="@color/accent_success"
            android:visibility="gone"
            tools:text="Settings updated successfully!"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>