<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.PersonalWellnessApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/wellness_primary</item>
        <item name="colorPrimaryVariant">@color/wellness_primary_dark</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorSecondary">@color/accent_success</item>
        <item name="colorSecondaryVariant">@color/accent_success</item>
        <item name="colorOnSecondary">@color/text_white</item>
        <item name="android:colorBackground">@color/primary_background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/surface_white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:statusBarColor">@color/wellness_primary</item>
        <item name="android:navigationBarColor">@color/surface_white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- Card Styles -->
    <style name="WellnessCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface_card</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="rippleColor">@color/ripple_primary</item>
    </style>

    <style name="WellnessCard.Elevated">
        <item name="cardElevation">12dp</item>
    </style>

    <style name="WellnessCard.Flat">
        <item name="cardElevation">2dp</item>
    </style>

    <!-- Button Styles -->
    <style name="WellnessButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_white</item>
        <item name="backgroundTint">@color/wellness_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="rippleColor">@color/ripple_primary</item>
    </style>

    <style name="WellnessButton.Success">
        <item name="backgroundTint">@color/accent_success</item>
    </style>

    <style name="WellnessButton.Warning">
        <item name="backgroundTint">@color/accent_warning</item>
    </style>

    <style name="WellnessButton.Error">
        <item name="backgroundTint">@color/accent_error</item>
    </style>

    <style name="WellnessButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/wellness_primary</item>
        <item name="strokeColor">@color/wellness_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">@color/ripple_primary</item>
    </style>

    <!-- Text Styles -->
    <style name="WellnessTextTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="WellnessTextSubtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="WellnessTextBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="WellnessTextCaption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="WellnessTextHint">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Floating Action Button -->
    <style name="WellnessFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/wellness_primary</item>
        <item name="tint">@color/text_white</item>
        <item name="rippleColor">@color/ripple_primary</item>
    </style>

    <!-- Input Field Styles -->
    <style name="WellnessTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/wellness_primary</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>

    <!-- Switch Style -->
    <style name="WellnessSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="colorPrimary">@color/wellness_primary</item>
        <item name="colorOnPrimary">@color/text_white</item>
    </style>

    <!-- Checkbox Style -->
    <style name="WellnessCheckbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="colorPrimary">@color/wellness_primary</item>
        <item name="colorOnPrimary">@color/text_white</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="WellnessProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/wellness_primary</item>
        <item name="android:progressBackgroundTint">@color/progress_background</item>
        <item name="android:minHeight">8dp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="WellnessBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextAppearanceActive">@style/WellnessBottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/WellnessBottomNavText</item>
        <item name="android:background">@color/surface_white</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Add this missing style -->
    <style name="WellnessBottomNavIndicator" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:color">@color/wellness_primary_light</item>
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
    </style>

    <style name="WellnessBottomNavText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Dialog Styles -->
    <style name="WellnessDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/wellness_primary</item>
        <item name="android:colorBackground">@color/surface_white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <!-- Widget Styles -->
    <style name="WidgetText">
        <item name="android:textColor">@color/widget_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="WidgetText.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="WidgetText.Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WidgetText.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>