<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/wellness_primary_light" />
            <stroke
                android:width="3dp"
                android:color="@color/wellness_primary" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/surface_light" />
            <stroke
                android:width="1dp"
                android:color="@color/border_light" />
        </shape>
    </item>
</selector>